        <image :src="post.avatarUrl || defaultAvatar" class="avatar" mode="aspectFill" />
        <view class="author-info">
          <text class="author-name">{{ post.author || 'åŒ¿åç”¨æˆ·' }}</text>
          <text class="post-time">{{ formatTime(post.createdAt) }}</text>
        </view>
        <view v-if="post.isMine" class="post-actions">
          <button size="mini" @click="editPost">ç¼–è¾‘</button>
          <button size="mini" @click="confirmDeletePost">åˆ é™¤</button>
        </view>
      </view>

      <!-- æ ‡é¢˜ -->
      <text class="post-title">{{ post.title }}</text>

      <!-- æè¿° -->
      <view v-if="post.description" class="post-desc">{{ post.description }}</view>

      <!-- åª’ä½“ -->
      <view v-if="post.type === 'image'" class="media-box">
        <image :src="post.mediaUrl" mode="widthFix" class="media-img" @click="previewImage" />
      </view>
      <view v-else-if="post.type === 'video'" class="media-box">
        <video :src="post.mediaUrl" controls class="media-video" />
      </view>

      <!-- ç»Ÿè®¡ä¿¡æ¯ -->
      <view class="stats-bar">
        <text>ğŸ‘ï¸ {{ post.views }} æµè§ˆ</text>
        <text>ğŸ‘ {{ post.likes }} ç‚¹èµ</text>
        <text>â­ å¹³å‡åˆ†ï¼š{{ avgRating.toFixed(1) }} ({{ totalRatings }}äºº)</text>
      </view>

      <!-- åˆ†å‰²çº¿ -->
      <view class="divider"></view>

      <!-- è¯„è®ºåŒºæ ‡é¢˜ -->
      <view class="comments-title">ğŸ’¬ å…± {{ comments.length }} æ¡è¯„è®º</view>

      <!-- è¯„è®ºåˆ—è¡¨ -->
      <view v-for="comment in comments" :key="comment._id" class="comment-item">
        <image :src="comment.avatarUrl || defaultAvatar" class="comment-avatar" mode="aspectFill" />
        <view class="comment-body">
          <view class="comment-header">
            <text class="comment-author">{{ comment.authorName || 'åŒ¿å' }}</text>
            <text class="comment-time">{{ formatTime(comment.createdAt) }}</text>
          </view>
          <text class="comment-content">{{ comment.commentContent }}</text>
          <view class="comment-footer">
            <text>â­ {{ comment.rating }}</text>
            <button 
              v-if="comment.isMyComment" 
              size="mini" 
              @click="confirmDeleteComment(comment)"
            >
              åˆ é™¤
            </button>
          </view>
        </view>
      </view>

      <!-- åŠ è½½æ›´å¤š / æ²¡æœ‰è¯„è®º -->
      <view v-if="comments.length === 0" class="no-comments">æš‚æ— è¯„è®ºï¼Œå¿«æ¥æŠ¢æ²™å‘ï¼</view>
    </scroll-view>

    <!-- å‘è¡¨è¯„è®ºåŒºåŸŸï¼ˆå›ºå®šåœ¨åº•éƒ¨ï¼‰ -->
    <view class="comment-input-bar">
      <input
        v-model="newComment"
        placeholder="è¯´ç‚¹ä»€ä¹ˆå§..."
        class="comment-input"
        @confirm="submitComment"
      />
      <picker @change="onRatingChange" :value="rating - 1" :range="[1,2,3,4,5]">
        <view class="rating-picker">â­{{ rating }}</view>
      </picker>
      <button 
        @click="submitComment" 
        :disabled="!newComment.trim()" 
        class="send-btn"
      >
        å‘é€
      </button>
    </view>

    <!-- åˆ é™¤ç¡®è®¤å¼¹çª— -->
    <view v-if="showDeleteConfirm" class="modal-overlay">
      <view class="delete-modal">
        <text>ç¡®å®šè¦åˆ é™¤å—ï¼Ÿ</text>
        <view class="modal-buttons">
          <button @click="cancelDelete">å–æ¶ˆ</button>
          <button @click="doDelete" class="confirm-btn">ç¡®å®š</button>
        </view>

<script setup>
import { ref, onMounted, computed } from 'vue'
import { onLoad } from '@dcloudio/uni-app'

// ===== Props & State =====
const contentId = ref('')
const post = ref({})
const comments = ref([])
const newComment = ref('')
const rating = ref(5)
const avgRating = ref(0)
const totalRatings = ref(0)

const showDeleteConfirm = ref(false)
const deleteTarget = ref(null) // 'post' or comment object

const defaultAvatar = 'https://vkceyugu.cdn.bspapp.com/VKCEYUGU-dc-site/0a8dfc00-2b0d-11eb-b6f6-39e5ff889326.png'

// ===== Lifecycle =====
onLoad((options) => {
  contentId.value = options.id
  if (contentId.value) {
    loadPostDetail()
    loadComments()
    loadRatingStats()
  }
})

// ===== API Methods =====
async function loadPostDetail() {
  try {
    const res = await uniCloud.callFunction({
      name: 'post-api',
      data: {
        action: 'get-post',
        postId: contentId.value
      }
    })
    if (res.result?.success) {
      post.value = res.result.data

      // å¦‚æœ media æ˜¯ç§æœ‰æ–‡ä»¶ï¼Œéœ€è½¬ä¸´æ—¶é“¾æ¥ï¼ˆå‡è®¾åç«¯æ²¡åšï¼‰
      if (post.value.fileID && !post.value.mediaUrl) {
        const urlRes = await uniCloud.getTempFileURL({ fileList: [post.value.fileID] })
        post.value.mediaUrl = urlRes.fileList[0]?.tempFileURL || ''
      }
    } else {
      throw new Error(res.result?.message || 'åŠ è½½å¤±è´¥')
    }
  } catch (err) {
    console.error('åŠ è½½å¸–å­å¤±è´¥:', err)
    uni.showToast({ title: 'åŠ è½½å¤±è´¥', icon: 'none' })
  }
}

async function loadComments(page = 1) {
  try {
    const res = await uniCloud.callFunction({
      name: 'comment-api',
      data: {
        action: 'list-comments',
        contentId: contentId.value,
        page,
        pageSize: 20
      }
    })
    if (res.result?.success) {
      comments.value = res.result.data.list || []
    }
  } catch (err) {
    console.error('åŠ è½½è¯„è®ºå¤±è´¥:', err)
    uni.showToast({ title: 'è¯„è®ºåŠ è½½å¤±è´¥', icon: 'none' })
  }
}

async function loadRatingStats() {
  try {
    const res = await uniCloud.callFunction({
      name: 'comment-api',
      data: {
        action: 'get-content-rating',
        contentId: contentId.value
      }
    })
    if (res.result?.success) {
      avgRating.value = res.result.data.avgRating || 0
      totalRatings.value = res.result.data.total || 0
    }
  } catch (err) {
    console.warn('åŠ è½½è¯„åˆ†å¤±è´¥:', err)
  }
}

async function submitComment() {
  if (!newComment.value.trim()) return

  try {
    const res = await uniCloud.callFunction({
      name: 'comment-api',
      data: {
        action: 'add-comment',
        contentId: contentId.value,
        commentContent: newComment.value.trim(),
        rating: rating.value
      }
    })
    if (res.result?.success) {
      uni.showToast({ title: 'è¯„è®ºæˆåŠŸ', icon: 'success' })
      newComment.value = ''
      rating.value = 5
      loadComments()     // åˆ·æ–°è¯„è®º
      loadRatingStats()  // åˆ·æ–°è¯„åˆ†
    } else {
      throw new Error(res.result?.message || 'è¯„è®ºå¤±è´¥')
    }
  } catch (err) {
    uni.showToast({ title: err.message || 'è¯„è®ºå¤±è´¥', icon: 'none' })
  }
}

async function deleteComment(commentId) {
  try {
    const res = await uniCloud.callFunction({
      name: 'comment-api',
      data: {
        action: 'delete-comment',
        commentId
      }
    })
    if (res.result?.success) {
      loadComments()
      loadRatingStats()
    } else {
      throw new Error(res.result?.message || 'åˆ é™¤å¤±è´¥')
    }
  } catch (err) {
    uni.showToast({ title: err.message || 'åˆ é™¤å¤±è´¥', icon: 'none' })
  }
}

// ===== UI Handlers =====
function onRatingChange(e) {
  rating.value = parseInt(e.detail.value) + 1
}

function confirmDeleteComment(comment) {
  deleteTarget.value = comment
  showDeleteConfirm.value = true
}

function confirmDeletePost() {
  deleteTarget.value = 'post'
  showDeleteConfirm.value = true
}

function cancelDelete() {
  showDeleteConfirm.value = false
  deleteTarget.value = null
}

async function doDelete() {
  if (deleteTarget.value === 'post') {
    // TODO: è°ƒç”¨åˆ é™¤å¸–å­çš„ API
    uni.showToast({ title: 'å¸–å­åˆ é™¤æˆåŠŸ', icon: 'success' })
    setTimeout(() => uni.navigateBack(), 1000)
  } else if (deleteTarget.value?._id) {
    await deleteComment(deleteTarget.value._id)
  }
  cancelDelete()
}

function editPost() {
  uni.navigateTo({ url: `/pages/content/edit/edit?id=${contentId.value}` })
}

function previewImage() {
  if (post.value.mediaUrl) {
    uni.previewImage({ urls: [post.value.mediaUrl] })
  }
}

// æ—¶é—´æ ¼å¼åŒ–ï¼ˆç®€å•ç‰ˆï¼‰
function formatTime(dateStr) {
  if (!dateStr) return ''
  const date = new Date(dateStr)
  return date.toLocaleString('zh-CN', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit'
  }).replace(/\//g, '-')
}
</script>


{
  "bsonType": "object",
  "required": [
    "follower_id",
    "following_id"
  ],
  "permission": {
    "read": "auth.uid != null",
    "create": "auth.uid != null",
    "delete": "doc.follower_id == auth.uid || doc.following_id == auth.uid",
    "update": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "follower_id": {
      "bsonType": "string",
      "description": "关注者ID，指向用户表",
      "foreignKey": "uni-id-users._id"
    },
    "following_id": {
      "bsonType": "string",
      "description": "被关注者ID，指向用户表",
      "foreignKey": "uni-id-users._id"
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "关注时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  },
  "indexes": [
    {
      "IndexName": "follower_following_idx",
      "MgoKeySchema": {
        "MgoIndexKeys": [
          {
            "Name": "follower_id",
            "Direction": "1"
          },
          {
            "Name": "following_id",
            "Direction": "1"
          }
        ]
      },
      "MgoIsUnique": true
    }
  ],
  "version": "1.0.0"
}

@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 60rpx;
}
.title {
  font-size: 60rpx;
  margin-bottom: 120rpx;
  color: #000000;
  text-align: center;
}
.btn-group {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}
.btn {
  display: block;
  width: 103%;
  padding: 30rpx;
  background-color: #007aff;
  color: white;
  border-radius: 30rpx;
  font-size: 32rpx;
  line-height: 1.5;
  text-decoration: none;
  margin-left: -40rpx;
}
.btn:active {
  opacity: 0.8;
}

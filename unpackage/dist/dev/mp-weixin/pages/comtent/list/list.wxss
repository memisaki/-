@import "../../../uvue.wxss";
:host{display:flex;flex-direction:column}

.container.data-v-befedf22 {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
  box-sizing: border-box;
  padding: 120rpx 40rpx 40rpx; /* 上、左右、下 */
}
.top-nav.data-v-befedf22 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
  position: relative;
  z-index: 999;
  background-color: #f8f9fa;
}
.nav-btn.data-v-befedf22 {
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  background-color: #007aff;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  -webkit-user-select: none;
          user-select: none;
}
.search-bar.data-v-befedf22 {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.search-bar input.data-v-befedf22 {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 28rpx;
}
.search-bar button.data-v-befedf22 {
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #007aff;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
}
.filter-modal.data-v-befedf22 {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}
.filter-item.data-v-befedf22 {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.self-only-toggle.data-v-befedf22 {
  margin-bottom: 30rpx;
  text-align: center;
}
.self-only-toggle button.data-v-befedf22 {
  padding: 10rpx 30rpx;
  background-color: #eaeaea;
  color: #333;
  border-radius: 20rpx;
  font-size: 28rpx;
}
.self-only-toggle button.active.data-v-befedf22 {
  background-color: #007aff;
  color: white;
}
.content-list.data-v-befedf22 {
  flex: 1;
  overflow-y: auto;
  min-height: 0;
}
.post-item.data-v-befedf22 {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}
.post-header.data-v-befedf22 {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}
.avatar-container.data-v-befedf22 {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #eee;
}
.avatar.data-v-befedf22 {
  width: 100%;
  height: 100%;
}
.post-author.data-v-befedf22 {
  font-weight: bold;
  color: #333;
}
.post-title.data-v-befedf22 {
  margin-top: 4rpx;
  color: #555;
  font-size: 32rpx;
}
.post-time.data-v-befedf22 {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #999;
}
.post-description.data-v-befedf22 {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.media-container.data-v-befedf22 {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.media-image.data-v-befedf22 {
  width: 100%;
  height: 100%;
}
.media-video.data-v-befedf22 {
  width: 100%;
  height: 100%;
}
.post-footer.data-v-befedf22 {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.post-actions.data-v-befedf22 {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}
.post-actions button.data-v-befedf22 {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.post-link.data-v-befedf22 {
  text-align: center;
  color: #007aff;
  font-size: 28rpx;
  text-decoration: none;
}
.loading-more.data-v-befedf22, .no-more.data-v-befedf22, .empty-tips.data-v-befedf22 {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}
.delete-confirm.data-v-befedf22 {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  text-align: center;
  z-index: 1000;
}
.delete-confirm button.data-v-befedf22 {
  margin-top: 20rpx;
  padding: 15rpx 30rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  width: 100%;
}
.delete-confirm button.data-v-befedf22:first-child {
  background-color: #007aff;
  color: white;
}
.delete-confirm button.data-v-befedf22:last-child {
  background-color: #ccc;
  color: #333;
  margin-top: 10rpx;
}
